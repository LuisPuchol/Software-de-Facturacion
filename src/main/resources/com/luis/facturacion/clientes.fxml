<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.ComboBox?>
<BorderPane fx:id="rootPane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.luis.facturacion.mvc_client.ClienteController">
    <!-- Tabla de clientes a la izquierda -->
    <left>
        <TableView fx:id="clientesTable" prefWidth="300">
            <columns>
                <TableColumn fx:id="idClienteColumn" prefWidth="50" text="ID" />
                <TableColumn fx:id="indClienteColumn" prefWidth="50" text="Ind" />
                <TableColumn fx:id="nombreClienteColumn" prefWidth="200" text="Nombre" />
            </columns>
        </TableView>
    </left>

    <!-- Formulario a la derecha -->
    <center>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <!-- ID Cliente -->
            <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="idClienteField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <!-- Índice -->
            <Label text="Índice:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="indClienteField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <!-- Nombre -->
            <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="nombreField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <!-- Dirección -->
            <Label text="Dirección:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="direccionField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <!-- Código Postal -->
            <Label text="C.P.:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <TextField fx:id="cpField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <!-- Población -->
            <Label text="Población:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <TextField fx:id="poblacionField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

            <!-- Provincia -->
            <Label text="Provincia:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
            <TextField fx:id="provinciaField" GridPane.columnIndex="1" GridPane.rowIndex="6" />

            <!-- CIF -->
            <Label text="CIF:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
            <TextField fx:id="cifField" GridPane.columnIndex="1" GridPane.rowIndex="7" />

            <!-- Teléfono -->
            <Label text="Teléfono:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
            <TextField fx:id="telField" GridPane.columnIndex="1" GridPane.rowIndex="8" />

            <!-- Teléfono 2 -->
            <Label text="Teléfono 2:" GridPane.columnIndex="0" GridPane.rowIndex="9" />
            <TextField fx:id="tel2Field" GridPane.columnIndex="1" GridPane.rowIndex="9" />

            <!-- Campos de tipo TINYINT (como checkboxes) -->
            <Label text="Req. Equivalencia:" GridPane.columnIndex="0" GridPane.rowIndex="10" />
            <CheckBox fx:id="reqEquivalenciaCheck" GridPane.columnIndex="1" GridPane.rowIndex="10" />

            <Label text="Tipo Cliente:" GridPane.columnIndex="0" GridPane.rowIndex="11" />
            <ComboBox fx:id="tipoClienteCombo" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="11" />

            <Label text="Factura por Albarán:" GridPane.columnIndex="0" GridPane.rowIndex="14" />
            <CheckBox fx:id="facturaAlbaranCheck" GridPane.columnIndex="1" GridPane.rowIndex="14" />
        </GridPane>
    </center>

    <!-- Botones en la parte inferior -->
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Button fx:id="nuevoButton" text="Nuevo" onMouseClicked="#handleNuevoButton"/>
            <Button fx:id="editarButton" text="Editar" onMouseClicked="#handleEditarButton"/>
            <Button fx:id="salirButton" text="Salir" onMouseClicked="#handleSalirButton"/>
        </HBox>
    </bottom>
</BorderPane>