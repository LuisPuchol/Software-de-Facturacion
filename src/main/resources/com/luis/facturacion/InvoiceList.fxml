<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.luis.facturacion.mvc_invoiceList.InvoiceListController">

    <center>
        <TableView fx:id="invoiceTable" prefWidth="600">
            <columns>
                <TableColumn fx:id="columnId" prefWidth="100" text="ID"/>
                <TableColumn fx:id="columnNumber" prefWidth="150" text="NÃºmero Factura"/>
                <TableColumn fx:id="columnCliente" prefWidth="200" text="Cliente"/>
                <TableColumn fx:id="columnTotal" prefWidth="150" text="Total"/>
                <TableColumn fx:id="columnInvoiced" prefWidth="100" text="Cobrado"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <Button fx:id="createCorrectiveInvoice" text="Generar Abono" onMouseClicked="#handleCreateCorrectiveInvoiceButton"/>
            <Button fx:id="exitButton" text="Salir" onMouseClicked="#handleExitButton"/>
        </HBox>
    </bottom>
</BorderPane>

