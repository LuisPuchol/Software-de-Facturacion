<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.luis.facturacion.mvc_invoice.InvoiceController">

    <center>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>

            <Label text="NÃºmero Factura:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="invoiceNumberField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Fecha Factura:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <DatePicker fx:id="invoiceDateField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="Cliente Factura:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="invoiceClientField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <Label text="IVA:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
            <TextField fx:id="invoiceVATField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

            <Label text="Observaciones:" GridPane.columnIndex="0" GridPane.rowIndex="12"/>
            <TextArea fx:id="invoiceObservationsField" prefHeight="50" GridPane.columnIndex="1" GridPane.rowIndex="12"/>
        </GridPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <Button fx:id="newButton" text="Nuevo" onMouseClicked="#handleAddButton"/>
            <Button fx:id="exitButton" text="Salir" onMouseClicked="#handleExitButton"/>
        </HBox>
    </bottom>
</BorderPane>
