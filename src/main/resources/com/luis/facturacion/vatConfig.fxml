<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.luis.facturacion.mvc_vatConfig.VATConfigController">

    <left>
        <TableView fx:id="VATConfigTable" prefWidth="300">
            <columns>
                <TableColumn fx:id="columnId" prefWidth="100" text="ID"/>
                <TableColumn fx:id="columnVAT" prefWidth="200" text="IVA"/>
                <TableColumn fx:id="columnText" prefWidth="300" text="Observaciones"/>
            </columns>
        </TableView>
    </left>

    <center>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>

            <Label text="ID Tipo de IVA:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="VATConfigIdField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="IVA:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="VATConfigNumberField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Observaciones:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="VATConfigTextField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        </GridPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <Button fx:id="newButton" text="Nuevo" onMouseClicked="#handleNuevoButton"/>
            <Button fx:id="editButton" text="Editar" onMouseClicked="#handleEditarButton"/>
            <Button fx:id="deleteButton" text="Eliminar" onMouseClicked="#handleEliminarButton"/>
            <Button fx:id="exitButton" text="Salir" onMouseClicked="#handleSalirButton"/>
        </HBox>
    </bottom>
</BorderPane>

