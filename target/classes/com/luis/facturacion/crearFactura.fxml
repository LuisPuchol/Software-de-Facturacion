<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.luis.facturacion.mvc_factura.FacturaController">

    <!-- Formulario en el centro -->
    <center>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>

            <!-- ID Factura -->
            <Label text="ID Factura:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="idFacturaField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <!-- Número Factura -->
            <Label text="Número Factura:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="numeroFacturaField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <!-- Fecha Factura -->
            <Label text="Fecha Factura:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <DatePicker fx:id="fechaFacturaField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <!-- Cliente Factura -->
            <Label text="Cliente Factura:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="clienteFacturaField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <!-- Base Imponible -->
            <Label text="Base Imponible:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="baseImponibleFacturaField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

            <!-- IVA -->
            <Label text="IVA:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
            <TextField fx:id="ivaFacturaField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

            <!-- Total Factura -->
            <Label text="Total Factura:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
            <TextField fx:id="totalFacturaField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

            <!-- Forma de Cobro -->
            <Label text="Forma de Cobro:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
            <TextField fx:id="formaCobroFacturaField" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

            <!-- Fecha de Cobro -->
            <Label text="Fecha de Cobro:" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
            <DatePicker fx:id="fechaCobroFacturaField" GridPane.columnIndex="1" GridPane.rowIndex="8"/>

            <!-- Cobrado -->
            <Label text="Cobrado:" GridPane.columnIndex="0" GridPane.rowIndex="9"/>
            <CheckBox fx:id="cobradaFacturaField" GridPane.columnIndex="1" GridPane.rowIndex="9"/>

            <!-- Hash Factura -->
            <Label text="Hash Factura:" GridPane.columnIndex="0" GridPane.rowIndex="10"/>
            <TextField fx:id="hashFacturaField" GridPane.columnIndex="1" GridPane.rowIndex="10"/>

            <!-- QR Factura -->
            <Label text="QR Factura:" GridPane.columnIndex="0" GridPane.rowIndex="11"/>
            <TextArea fx:id="qrFacturaField" prefHeight="50" GridPane.columnIndex="1" GridPane.rowIndex="11"/>

            <!-- Observaciones -->
            <Label text="Observaciones:" GridPane.columnIndex="0" GridPane.rowIndex="12"/>
            <TextArea fx:id="observacionesFacturaField" prefHeight="50" GridPane.columnIndex="1" GridPane.rowIndex="12"/>
        </GridPane>
    </center>

    <!-- Botones en la parte inferior -->
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <Button fx:id="nuevoButton" text="Nuevo" onMouseClicked="#handleNuevoButton"/>
            <Button fx:id="salirButton" text="Salir" onMouseClicked="#handleSalirButton"/>
        </HBox>
    </bottom>
</BorderPane>
